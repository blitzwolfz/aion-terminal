{
  "$schema": "https://v2.tauri.app/schema",
  "productName": "Aion",
  "version": "0.1.0",
  "identifier": "com.aion.terminal",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Aion",
        "width": 1440,
        "height": 900,
        "minWidth": 960,
        "minHeight": 600,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {
    "sql": {
      "preload": [
        {
          "db": "sqlite:aion.db"
        }
      ]
    }
  }
}
